@model StudentAdministration_v3.Models.Student

<form method="post" asp-action="DeletePost">
    @*HUSK at brug DeletePost, fordi vi skal slette objektet helt fra databasen- Den anden delete viser kun info om det obj som vi gerne vil slette*@
    <input asp-for="Id" hidden /> @*Vi bruger Id til at finde objektet og det skal være hidden så folk ikke kan se det*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Student from list</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="StudentName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="EducationName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="SemesterNo"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="StudentName" disabled class="form-control" />  @*asp-for gør at det der bliver skrevet i det input bliver gemt i "ItemName" propperty'en*@
                    </div>
                    <div class="col-3">
                        <input asp-for="Email" disabled class="form-control" />  @*asp-for gør at det der bliver skrevet i det input bliver gemt i "ItemName" propperty'en*@
                    </div>
                    <div class="col-3">
                        <input asp-for="EducationName" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="SemesterNo" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@*Laver validation på server siden*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}